<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./partials/head") %>
  <title>Sign In</title>
 <link rel="stylesheet" href="/css/responsive-signin.css">
</head>
<body style="font-family: 'Segoe UI', sans-serif; background-color: #f8f9fa;">
  <%- include("./partials/nav") %>

  <div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg auth-card rounded-4 p-5" style="width: 100%; max-width: 450px; border: none;">
      <h2 class="text-center fw-bold text-dark mb-4" style="font-size: 2rem;">ğŸ” Sign In</h2>

      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger text-center rounded-3 fw-semibold shadow-sm mb-4" role="alert" style="font-size: 0.95rem;">
          <%= error %>
        </div>
      <% } %>

      <form action="/user/signin" method="post">
        <!-- Email -->
        <div class="mb-3 position-relative">
  <label for="email" class="form-label fw-semibold text-secondary">Email address</label>
  <input type="email" class="form-control " id="email" name="email" placeholder="you@example.com" style="padding: 10px; border-radius: 10px;">
  <i class="bi bi-envelope-fill" style="
    position: absolute;
  right: 15px;
  top: 70%;
    transform: translateY(-50%);
    color: #6c757d;
    font-size: 1.1rem;
  "></i>
</div>


        <!-- Password -->
        <div class="mb-4 position-relative">
          <label for="password" class="form-label fw-semibold text-secondary">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" style="padding: 10px; border-radius: 10px;">
         <i class="bi bi-eye-slash" id="togglePassword" style="
  position: absolute;
  right: 15px;
  top: 68%;
  transform: translateY(-50%);
  cursor: pointer;
  font-size: 1.2rem;
  color: #6c757d;
"></i>

        </div>
        <p class="text-end mt-2">
  <a href="/user/forgot-password" class="text-decoration-none fw-semibold">Forgot password?</a>
</p>


        <!-- Submit Button -->
        <div class="d-grid">
          <button type="submit" class="btn btn-dark btn-lg rounded-3">Login</button>
        </div>
      </form>

      <!-- Register link -->
      <p class="mt-4 text-center" style="font-size: 0.95rem;">
        Don't have an account? 
        <a href="/user/signup" class="fw-semibold text-decoration-none">Register here</a>
      </p>
    </div>
  </div>

  <%- include("./partials/scripts") %>
  <%- include('./partials/footer') %>


</body>
</html>
